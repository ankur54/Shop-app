<%- include('../includes/header.ejs') %>
    <link rel="stylesheet" href="/css/main.css">
    <link rel="stylesheet" href="/css/product.css">
</head>

<body>
    <%- include('../includes/navigation.ejs') %>

    <main>
        <h1>My Products</h1>
        <p>List of all the products...</p>

        <% if (products.length > 0) { %>
            <% for (let prods of products) { %>
                <div class="grid">
                    <article class="card product-item">
                        <header class="card__header">
                            <h1 class="product__title"><%= prods.title %></h1>
                        </header>
                        <div class="card__image">
                            <img src="<%= prods.imageUrl %>" alt="<%= prods.title %>">
                        </div>
                        <div class="card__content">
                            <h2 class="product__price"><%= prods.price %></h2>
                            <p class="product__description"><%= prods.description %></p>
                        </div>
                        
                        <div class="card__actions">
                            <a href="/admin/edit-product/<%= prods.id %>?edit=true" class="btn">Edit</a>
                            <form action="/admin/delete-product" method="POST">
                                <button class="btn" type="submit">Delete</button>
                                <input type="hidden" name="productId" value="<%= prods.id %>">
                            </form>
                        </div>
                        
                    </article>
                </div>
            <% } %>
        <% } else { %>
            <h1>No Products Found. Come Bak later !!!</h1>
        <% } %>
    </main>

<%- include('../includes/end.ejs') %>